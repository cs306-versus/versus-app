<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <RelativeLayout android:id="@+id/image"
        android:layout_marginTop="12dp"
        android:layout_marginStart="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View android:id="@+id/image_background"
            android:background="@drawable/image_background_shape"
            android:alpha="0.60000002384186"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="363dp"
            android:layout_height="436dp" />

        <ImageView android:id="@+id/vector"
            android:src="@drawable/sally_1"
            android:contentDescription="vector"
            android:layout_marginStart="0dp"
            android:layout_marginTop="72dp"
            android:layout_width="363dp"
            android:layout_height="363dp" />

    </RelativeLayout>

    <TextView
        android:fontFamily="@font/poppins_medium"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="72sp"
        android:textColor="@color/versus_color"
        android:layout_marginStart="68dp"
        android:layout_marginTop="462dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/versus_string"
        />

    <RelativeLayout android:id="@+id/welcome_text"
        android:layout_marginTop="566dp"
        android:layout_marginStart="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView android:id="@+id/welcome_to_our_app__"
            android:fontFamily="Poor Story"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/versus_color"
            android:layout_marginStart="97dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_our_app___string" />

        <TextView android:id="@+id/we_hope_that_you_enjoy_using_it_for_your_games"
            android:fontFamily="Poor Story"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/versus_color"
            android:layout_marginStart="-10px"
            android:layout_marginTop="41dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_hope_that_you_enjoy_using_it_for_your_games_string" />

    </RelativeLayout>

        <TextView android:id="@+id/register"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/register_btn_ek1_shape"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/_bg__authentication_screen_ek2_color"
            android:layout_marginStart="14dp"
            android:layout_marginTop="727dp"
            android:layout_width="187dp"
            android:layout_height="96dp"
            android:text="@string/register_string"
            />

        <TextView android:id="@+id/sign_in"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/signin_btn_ek1_shape"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/_bg__authentication_screen_ek2_color"
            android:layout_marginStart="196dp"
            android:layout_marginTop="727dp"
            android:layout_width="187dp"
            android:layout_height="96dp"
            android:text="@string/sign_in_string"
            />

</RelativeLayout>