<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout android:id="@+id/reference_frame_size"
        android:background="@drawable/background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout android:id="@+id/page_reference_frame_size_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View   android:id="@+id/_bg__reference_frame_size_ek2"
                    android:background="@drawable/background"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="392dp"
                    android:layout_height="850dp" />

                <ImageView android:id="@+id/image"
                    android:src="@drawable/image"
                    android:contentDescription="image"
                    android:layout_marginStart="69dp"
                    android:layout_marginTop="36dp"
                    android:layout_width="254dp"
                    android:layout_height="254dp" />

                <View   android:id="@+id/card"
                    android:background="@drawable/card_shape"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="290dp"
                    android:layout_width="327dp"
                    android:layout_height="509dp" />

                <TextView android:id="@+id/login"
                    android:fontFamily="Poppins"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="29sp"
                    android:textColor="@color/login_color"
                    android:layout_marginStart="49dp"
                    android:layout_marginTop="298dp"
                    android:layout_width="94dp"
                    android:layout_height="64dp"
                    android:text="@string/login_string"
                    />

                <!-- FIX OFFSET HERE AND CENTER IT -->

                <EditText
                    android:id="@+id/auth_login_mail_mail"
                    android:layout_width="246dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="407dp"
                    android:background="@drawable/mail_input_ek1"
                    android:drawableStart="@drawable/_3_friends"
                    android:ems="10"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:hint="@string/enter_your_mail_string"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/login_color"
                    android:textColorHint="@color/login_color"
                    android:textSize="13sp" />

                <!-- FIX OFFSET HERE AND CENTER IT -->

                <EditText
                    android:id="@+id/auth_login_mail_pwd"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColorHint="@color/login_color"
                    android:textColor="@color/login_color"
                    android:drawableStart="@drawable/vector_ek12"
                    android:background="@drawable/mail_input_ek2"
                    android:layout_marginTop="490dp"
                    android:layout_marginStart="73dp"
                    android:layout_width="246dp"
                    android:layout_height="29dp"
                    android:ems="10"
                    android:hint="@string/enter_your_password_string"
                    android:inputType="textPassword" />

                <RelativeLayout android:id="@+id/pwd_reset"
                    android:layout_marginTop="563dp"
                    android:layout_marginStart="181dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView android:id="@+id/did_you_forget_your_password__"
                        android:fontFamily="Poppins"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="8sp"
                        android:textColor="@color/did_you_forget_your_password___color"
                        android:layout_marginStart="-4px"
                        android:layout_marginTop="0dp"
                        android:layout_width="142dp"
                        android:layout_height="19dp"
                        android:text="@string/did_you_forget_your_password___string"
                        />

                    <TextView android:id="@+id/reset_it"
                        android:fontFamily="Poppins"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="8sp"
                        android:shadowRadius="4"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="4"
                        android:textColor="@color/login_color"
                        android:layout_marginStart="135dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="38dp"
                        android:layout_height="19dp"
                        android:text="@string/reset_it_string"
                        />

                </RelativeLayout>


                <Button
                    android:id="@+id/auth_login_mail"
                    android:background="@drawable/rectangle_1_shape"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/login_ek1_color"
                    android:layout_marginTop="598dp"
                    android:layout_marginStart="105dp"
                    android:layout_width="181dp"
                    android:layout_height="54dp"
                    android:text="@string/login_ek1_string" />

                <ImageView android:id="@+id/left_line"
                    android:src="@drawable/left_line"
                    android:contentDescription="left_line"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="682dp"
                    android:layout_width="65dp"
                    android:layout_height="10dp" />

                <TextView android:id="@+id/you_can_also_sign_in_using"
                    android:fontFamily="Poppins"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/did_you_forget_your_password___color"
                    android:layout_marginLeft="297.5px"
                    android:layout_marginTop="672dp"
                    android:layout_width="180dp"
                    android:layout_height="28dp"
                    android:text="@string/you_can_also_sign_in_using_string"
                    />

                <ImageView android:id="@+id/right_line"
                    android:src="@drawable/right_line"
                    android:contentDescription="right_line"
                    android:layout_marginStart="287dp"
                    android:layout_marginTop="682dp"
                    android:layout_width="65dp"
                    android:layout_height="10dp" />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/auth_login_google"
                    android:background="@drawable/auth_button"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:layout_width="181dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="727dp"
                    android:layout_marginStart="105dp" />

                <!-- THIS IS JUST A TMP BUTTON-->
                <Button
                    android:id="@+id/auth_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="790dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="79dp"
                    android:layout_marginBottom="253dp"
                    android:text="@string/auth_signin" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>