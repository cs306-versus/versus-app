    </RelativeLayout>

    <RelativeLayout android:id="@+id/passwordfield"
        android:layout_marginTop="536dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rectangle_40_ek4"
            android:background="@drawable/auth_register_field_shape"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:layout_width="294dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/rectangle_41_ek4"
            android:background="@drawable/auth_rectangle_41_ek4_shape"
            android:layout_marginStart="28dp"
            android:layout_marginTop="0dp"
            android:layout_width="85dp"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/password"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/first_name_color"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="0dp"
            android:layout_width="76dp"
            android:layout_height="30dp"
            android:text="@string/password" />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/confirmpasswordfield"
        android:layout_marginTop="608dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rectangle_40_ek5"
            android:background="@drawable/auth_register_field_shape"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:layout_width="294dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/rectangle_41_ek5"
            android:background="@drawable/auth_rectangle_41_ek5_shape"
            android:layout_marginStart="28dp"
            android:layout_marginTop="0dp"
            android:layout_width="145dp"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/confirm_password"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/first_name_color"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="0dp"
            android:layout_width="136dp"
            android:layout_height="30dp"
            android:text="@string/confirm_password"
            />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/register_btn"
        android:background="@drawable/rectangle_1_shape"
        android:layout_marginTop="719dp"
        android:layout_marginStart="105dp"
        android:layout_width="181dp"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/register"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register" />

    </RelativeLayout>

</RelativeLayout>