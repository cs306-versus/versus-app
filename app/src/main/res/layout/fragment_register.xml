            android:layout_width="114dp"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/email_address"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/first_name_color"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="0dp"
            android:layout_width="107dp"
            android:layout_height="30dp"
            android:text="@string/email_address"
            />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/phonefield"
        android:layout_marginTop="425dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rectangle_40_ek3"
            android:background="@drawable/auth_register_field_shape"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:layout_width="294dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/rectangle_41_ek3"
            android:background="@drawable/auth_rectangle_41_ek3_shape"
            android:layout_marginStart="28dp"
            android:layout_marginTop="0dp"
            android:layout_width="123dp"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/phone_number"
            android:fontFamily="@font/poppins_medium"
