<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sport_icon"
        android:layout_width="32dp"
        android:layout_height="17dp"
        android:layout_below="@+id/announcement_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/runner_silhouette_svgrepo_com" />

    <TextView
        android:id="@+id/announcement_title"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="Title" />

    <TextView
        android:id="@+id/announcement_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcement_sport"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="3/4" />

    <TextView
        android:id="@+id/announcement_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/announcement_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/sport_icon"
        android:text="soccer" />

    <TextView
        android:id="@+id/announcement_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcement_players"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="UNIL-sport" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="38dp"
        android:text="Join" />

    <TextView
        android:id="@+id/announcement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcement_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="47dp"
        android:text="5/6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_below="@+id/sport_icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/profiil" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/placeholder_on_map_paper_in_perspective_svgrepo_com" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcement_title"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/announcement_date"
        app:srcCompat="@drawable/ic_schedule" />
</RelativeLayout>